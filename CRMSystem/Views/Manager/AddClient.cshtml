@model CRMSystem.Models.Client

<h2>Добавить клиента</h2>

<form asp-action="AddClient" class="container mt-4">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">Имя клиента</label>
        <input asp-for="Name" class="form-control" required />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="ContactInfo" class="form-label">Контактная информация</label>
        <input asp-for="ContactInfo" class="form-control" required />
        <span asp-validation-for="ContactInfo" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Address" class="form-label">Адрес</label>
        <input asp-for="Address" class="form-control" />
        <span asp-validation-for="Address" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="City" class="form-label">Город</label>
        <input asp-for="City" class="form-control" />
        <span asp-validation-for="City" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Region" class="form-label">Регион</label>
        <input asp-for="Region" class="form-control" />
        <span asp-validation-for="Region" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PostalCode" class="form-label">Почтовый индекс</label>
        <input asp-for="PostalCode" class="form-control" />
        <span asp-validation-for="PostalCode" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Country" class="form-label">Страна</label>
        <input asp-for="Country" class="form-control" />
        <span asp-validation-for="Country" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Phone" class="form-label">Телефон</label>
        <input asp-for="Phone" class="form-control" />
        <span asp-validation-for="Phone" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Fax" class="form-label">Факс</label>
        <input asp-for="Fax" class="form-control" />
        <span asp-validation-for="Fax" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="HomePage" class="form-label">Домашняя страница</label>
        <input asp-for="HomePage" class="form-control" />
        <span asp-validation-for="HomePage" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Extension" class="form-label">Дополнение</label>
        <input asp-for="Extension" class="form-control" />
        <span asp-validation-for="Extension" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="PhoneNumber" class="form-label">Номер телефона</label>
        <input asp-for="PhoneNumber" class="form-control" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Добавить клиента</button>
</form>
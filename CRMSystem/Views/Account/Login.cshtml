@model CRMSystem.ViewModels.LoginViewModel


@{
    ViewData["Title"] = "Login";
}

<h2>Вход</h2>

<form asp-action="Login" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <label asp-for="Name">Введите Ваше имя</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Password">Введите Ваш пароль</label>
        <input asp-for="Password" class="form-control" />
        <span asp-validation-for="Password" class="text-danger"></span>
    </div>
    <div>
        <input type="checkbox" asp-for="RememberMe" />
        <label asp-for="RememberMe">Запомнить меня</label>
    </div>
    <input type="hidden" asp-for="ReturnUrl" />
    <button type="submit" class="btn btn-primary">Войти</button>
</form>

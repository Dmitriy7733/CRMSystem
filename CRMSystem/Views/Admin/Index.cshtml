
@model IEnumerable<CRMSystem.Models.User>
@{
    ViewBag.Title = "Менеджеры";
}


<h2>Список менеджеров</h2>

@if (TempData["TemporaryPasswordMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["TemporaryPasswordMessage"]
    </div>
}

@if (Model != null && Model.Any())
{
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Имя</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var manager in Model)
            {
                <tr>
                    <td>@manager.Id</td>
                    <td>@manager.Name</td>
                    <td>
                        <form method="post" asp-action="Delete" asp-route-id="@manager.Id">
                            <button type="submit" onclick="return confirm('Вы уверены, что хотите удалить этого менеджера?');">Удалить</button>
                        </form>
                        
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p>Нет доступных менеджеров.</p>
}
<a asp-action="AddManager">Добавить Менеджера</a>